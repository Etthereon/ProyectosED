@page
@model Frontend.Pages.EditModel
@{
    ViewData["Title"]="Edit";
}

<br>
<br>
<br>
<br>

<h1>Editar Municipios </h1>
<h4>Municipio</h4>
<br>
<h3 class="text-danger">@ViewData["Mensaje"]</h3>

<div class="form-horizontal">
        
        <hr />
        
        <div class="row">
           <div class="col-md-4">
               <form method="post">
                  
                   <input type="hidden" asp-for="Municipio.id" />
                   <div class="form-group">
                       <label asp-for="Municipio.Nombre" class="control-label"> </label>
                       <input asp-for="Municipio.Nombre"  class="form-control" readonly/>                      
                       
                   </div>
                   <br>
                   <div class="form-group">                       
                       <input type="submit" value="Editar" class="btn btn-success"/>                       
                   </div>
               </form>
           </div>
        </div>
        <br>
        <div>
            <a asp-page="MunIndex">Volver</a>
        </div> 
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
