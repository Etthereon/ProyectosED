@page
@model Frontend.Pages.MunIndexModel
@{
    ViewData ["Title"]="MunIndex";
}
<h1>Listado de Municipios</h1>
<p>
    <a asp-page="Create" class="btn btn-success">Crear Municipio</a>
</p>
<table class="table">
    <thead>
        <tr>
            <!-- <th>Id</th> -->
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mun in Model.Municipios)
        {
            <tr>
                <!--  <td>@mun.id</td> -->
                <td>@mun.Nombre</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@mun.id" class="btn btn-primary">Editar</a>
                    <a asp-page="./Delete" asp-route-id="@mun.id" class="btn btn-warning">Eliminar</a>
                    <a asp-page="./Details" asp-route-id="@mun.id" class="btn btn-info">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>
