@page
@model Frontend.Pages.DeleteCEModel
@{
    ViewData["Title"]="Delete";
}
<br>
<br>
<br>
<br>

<h1>Borrar canchas</h1>
<br>
<h4>Canchas</h4>

<div class="form-horizontal">        
        <hr />        
        <div class="row">
           <div class="col-md-4">
               <form method="post">                   
                   <input type="hidden" asp-for="CanchaEspacio.id" />
                   <div class="form-group">
                        <label asp-for="CanchaEspacio.Nombre" class="control-label"></label>
                        <input asp-for="CanchaEspacio.Nombre" class="form-control" readonly/>
                        <label asp-for="CanchaEspacio.Disciplina" class="control-label"></label>
                        <input asp-for="CanchaEspacio.Disciplina" class="form-control" readonly/>
                        <label asp-for="CanchaEspacio.Estado" class="control-label"></label>
                        <input asp-for="CanchaEspacio.Estado" class="form-control" readonly/>
                        <label asp-for="CanchaEspacio.CapacidadEspectadores" class="control-label">Capacidad de espectadores</label>
                        <input asp-for="CanchaEspacio.CapacidadEspectadores" class="form-control" readonly/>
                        <label asp-for="CanchaEspacio.Medidas" class="control-label"></label>
                        <input asp-for="CanchaEspacio.Medidas" class="form-control" readonly/>
                        <label asp-for="CanchaEspacio.EscenarioId" class="control-label">Escenario</label>
                        <select name="" id="" asp-for="CanchaEspacio.EscenarioId" class="form-control" disabled>
                            <option value="" >**Seleccione una CanchaEspacio** </option>
                                @foreach (var canesc in Model.Escenarios)
                                {
                                    <option value="@canesc.id">@canesc.Nombre</option>   
                                }
                        </select>                    
                            
                   </div>
                   <h5 class="text-danger">@ViewData["Mensaje"] </h5>
                   <br>

                   <div class="form-group">                       
                       <input type="submit" value="Eliminar" class="btn btn-success"/>                       
                   </div>
               </form>
           </div>
        </div>
<br>
        <div>
            <a asp-page="CEIndex">Volver</a>
        </div> 
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


