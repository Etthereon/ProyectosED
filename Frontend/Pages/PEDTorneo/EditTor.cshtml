@page
@model Frontend.Pages.EditTorModel
@{
    ViewData["Title"]="Edit";
}
<br>
<br>
<br>
<br>

<h1>Editar Torneos</h1>
<br>
<h4>Torneo</h4>
<h3 class="text-danger">@ViewData["Mensaje"]</h3>

<div class="form-horizontal">
        
        <hr />
        
        <div class="row">
           <div class="col-md-4">
               <form method="post">
                  
                   <input type="hidden" asp-for="Torneo.id" />
                   <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
                   <div class="form-group">
                    <label asp-for="Torneo.Nombre" class="control-label"></label>
                    <input asp-for="Torneo.Nombre" class="form-control" readonly/>
                    <label asp-for="Torneo.Categoria" class="control-label">Categoría</label>
                    <input asp-for="Torneo.Categoria" class="form-control" />
                    <span asp-validation-for="Torneo.Categoria" class="text-danger"></span>
                    <label asp-for="Torneo.FechaInicial" class="control-label">Fecha de inicio</label>
                    <input asp-for="Torneo.FechaInicial" class="form-control" />
                    <span asp-validation-for="Torneo.FechaInicial" class="text-danger"></span>
                    <label asp-for="Torneo.FechaFinal" class="control-label">Fecha final</label>
                    <input asp-for="Torneo.FechaFinal" class="form-control" />
                    <span asp-validation-for="Torneo.FechaFinal" class="text-danger"></span>
                    <label asp-for="Torneo.Tipo" class="control-label"></label>
                    <input asp-for="Torneo.Tipo" class="form-control" />
                    <span asp-validation-for="Torneo.Tipo" class="text-danger"></span>
                    <label asp-for="Torneo.MunicipioId" class="control-label">Municipio</label>
                    <select asp-for="Torneo.MunicipioId" class="form-control" >
                        <option value="">**Seleccione un Municipio**</option>
                        @foreach (var mun in Model.Municipios)
                        {
                            <option value="@mun.id">@mun.Nombre</option>
                            
                        }
                    </select>                     
                       
                   </div>
                   <br>
                   <div class="form-group">                       
                       <input type="submit" value="Editar" class="btn btn-success"/>                       
                   </div>
               </form>
           </div>
        </div>
<br>
        <div>
            <a asp-page="TorIndex">Volver</a>
        </div> 
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

