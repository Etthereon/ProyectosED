@page
@model Frontend.Pages.PIndexModel
@{
    ViewData["Titulo"]="PIndex"; // Sirven para el manejo de directivas. 
}
<h1>Listado de Patrocinadores</h1> 
<p>
    <a asp-page="CreatePatrocinador" class="btn btn-success">Crear Patrocinador</a> 
</p>
<table class="table"> 
   <thead> 
       <tr>
           <!--<th>Id</th> -->
           <th>Identificacion</th>
           <th>Nombre</th>
           <th>TipoPersona</th>
           <th>Direccion</th>
           <th>Telefono</th>
       </tr>
   </thead>
   @foreach (var patro in Model.Patrocinadores)
   {
    <tr> 
        <!-- <td>  @patro.id  </td> -->
        <td>  @patro.Identificacion </td>
        <td>  @patro.Nombre</td>
        <td>  @patro.tipoPersona </td>
        <td>  @patro.Direccion </td>
        <td>  @patro.Telefono </td>
        <td>
             <a asp-page="./EditPatrocinador" asp-route-id= "@patro.id" class="btn btn-primary"> Editar </a> 
             <a asp-page="./DeletePatrocinador" asp-route-id= "@patro.id" class="btn btn-warning"> Eliminar </a>
             <a asp-page="./DetailsPatrocinador" asp-route-id= "@patro.id" class="btn btn-info"> Detalles </a>
        </td>
    </tr>
   }
</table>

