@page
@model Frontend.Pages.EscIndexModel
@{
    ViewData ["Title"]="EscIndex";
}
<h1>Listado de Escenarios</h1>
<p>
    <a asp-page="CreateEsc" class="btn btn-success">Crear Escenario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <!-- <th>Id</th> -->
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Telefono</th>
            <th>Horario</th>
            <th>Torneo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var esc in Model.EscenarioView)
        {
            <tr>
                <!-- <td>@esc.id</td> -->
                <td>@esc.Nombre</td>
                <td>@esc.Direccion</td>
                <td>@esc.Telefono</td>
                <td>@esc.Horario</td>
                <td>@esc.Torneo</td>
                <td>
                    <a asp-page="./EditEsc" asp-route-id="@esc.id" class="btn btn-primary">Editar</a>
                    <a asp-page="./DeleteEsc" asp-route-id="@esc.id" class="btn btn-warning">Eliminar</a>
                    <a asp-page="./DetailsEsc" asp-route-id="@esc.id" class="btn btn-info">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>

