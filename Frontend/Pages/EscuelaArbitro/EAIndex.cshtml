@page
@model Frontend.Pages.EAIndexModel
@{
    ViewData["Titulo"]="PIndex"; // Sirven para el manejo de directivas. 
}
<br>
<br>
<br>
<br>

<h1>Listado de escuelas de arbitros</h1> 
<p>
    <a asp-page="CreateEscuelaArbitro" class="btn btn-success">Crear una Escuela de Arbitros</a> 
</p>
<table class="table"> 
   <thead> 
       <tr>
           <!-- <th>Id</th> -->
           <th>Nombre</th>
           <th>Resolucion</th>
           <th>Dirección</th>
           <th>Teléfono</th>
           <th>Correo</th>


       </tr>
   </thead>
   @foreach (var earbitro in Model.EscuelaArbitros)
   {
    <tr> 
        <!-- <td>  @earbitro.id  </td> -->
        <td>  @earbitro.Nombre</td>
        <td>  @earbitro.Resolucion </td>
        <td>  @earbitro.Direccion </td>
        <td>  @earbitro.Telefono </td>
        <td>  @earbitro.Correo </td>

        <td>
             <a asp-page="./EditEscuelaArbitro" asp-route-id= "@earbitro.id" class="btn btn-primary"> Editar </a> 
             <a asp-page="./DeleteEscuelaArbitro" asp-route-id= "@earbitro.id" class="btn btn-warning"> Eliminar </a>
             <a asp-page="./DetailEscuelaArbitro" asp-route-id= "@earbitro.id" class="btn btn-info"> Detalles </a>
        </td>
    </tr>
   }
</table>

