@page
@model Frontend.Pages.DeleteEscuelaArbitroModel
@{
         ViewData["Title"]="Delete";
}
<br>
<br>
<br>
<br>

<h1>Borrar escuelas</h1>
<br>
<h4>Escuela </h4>

<div class="form-horizontal">        
        <hr />        
        <div class="row">
           <div class="col-md-4">
               <form method="post">                   
                   <input type="hidden" asp-for="EscuelaArbitro.id" />
                   <div class="form-group">
                    <label asp-for="EscuelaArbitro.Nombre" class="control-label"> </label>
                    <input asp-for="EscuelaArbitro.Nombre" class="form-control" readonly/>
                    <label asp-for="EscuelaArbitro.Resolucion" class="control-label">Resolución</label>
                    <input asp-for="EscuelaArbitro.Resolucion" class="form-control" readonly/>
                    <label asp-for="EscuelaArbitro.Direccion" class="control-label">Dirección</label>
                    <input asp-for="EscuelaArbitro.Direccion" class="form-control" readonly/>
                    <label asp-for="EscuelaArbitro.Telefono" class="control-label">Teléfono</label>
                    <input asp-for="EscuelaArbitro.Telefono" class="form-control" readonly/>
                    <label asp-for="EscuelaArbitro.Correo" class="control-label"> </label>
                    <input asp-for="EscuelaArbitro.Correo" class="form-control" readonly/>                   
                   </div>
                   <h5 class="text-danger">@ViewData["Mensaje"] </h5>
                   <div class="form-group">                       
                       <input type="submit" value="Eliminar" class="btn btn-success"/>                       
                   </div>
               </form>
           </div>
        </div>
<br>
        <div>
            <a asp-page="EAIndex">Volver</a>
        </div> 
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
