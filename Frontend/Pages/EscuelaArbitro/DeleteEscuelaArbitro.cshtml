@page
@model Frontend.Pages.DeleteEscuelaArbitroModel
@{
         ViewData["Title"]="Delete";
}
<h1>Delete</h1>
<h4>Escuela Patrocinador</h4>
<h2 class="text-danger">@ViewData["Mensaje"] </h2>
<div class="form-horizontal">        
        <hr />        
        <div class="row">
           <div class="col-md-4">
               <form method="post">                   
                   <input type="hidden" asp-for="EscuelaArbitro.id" />
                   <div class="form-group">
                    <label asp-for="EscuelaArbitro.Nombre" class="control-label"> </label>
                    <input asp-for="EscuelaArbitro.Nombre" class="form-control" readonly/>
                    <label asp-for="EscuelaArbitro.Resolucion" class="control-label"> </label>
                    <input asp-for="EscuelaArbitro.Resolucion" class="form-control" readonly/>
                    <label asp-for="EscuelaArbitro.Direccion" class="control-label"> </label>
                    <input asp-for="EscuelaArbitro.Direccion" class="form-control" readonly/>
                    <label asp-for="EscuelaArbitro.Telefono" class="control-label"> </label>
                    <input asp-for="EscuelaArbitro.Telefono" class="form-control" readonly/>
                    <label asp-for="EscuelaArbitro.Correo" class="control-label"> </label>
                    <input asp-for="EscuelaArbitro.Correo" class="form-control" readonly/>                   
                   </div>
                   <div class="form-group">                       
                       <input type="submit" value="Eliminar" class="btn btn-primary"/>                       
                   </div>
               </form>
           </div>
        </div>

        <div>
            <a asp-page="EAIndex">Ir al Inicio</a>
        </div> 
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
