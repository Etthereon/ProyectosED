@page
@model Frontend.Pages.EditEscuelaArbitroModel
@{
    ViewData["Title"]="Edit";
}
<h1>Editar Escuelas de Arbitros </h1>
<h4>Escuela Arbitro</h4>
<h3 class="text-danger">@ViewData["Mensaje"]</h3>

<div class="form-horizontal">  
        <hr />    
        <div class="row">
           <div class="col-md-4">
               <form method="post">
                   <input type="hidden" asp-for="EscuelaArbitro.id" />
                   <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
                   <div class="form-group">
                    <label asp-for="EscuelaArbitro.Nombre" class="control-label"> </label>
                    <input asp-for="EscuelaArbitro.Nombre" class="form-control" readonly/>
                    <label asp-for="EscuelaArbitro.Resolucion" class="control-label"> </label>
                    <input asp-for="EscuelaArbitro.Resolucion" class="form-control" />
                    <span asp-validation-for="EscuelaArbitro.Resolucion" class="text-danger"></span>
                    <label asp-for="EscuelaArbitro.Direccion" class="control-label"> </label>
                    <input asp-for="EscuelaArbitro.Direccion" class="form-control" />
                    <span asp-validation-for="EscuelaArbitro.Direccion" class="text-danger"></span>
                    <label asp-for="EscuelaArbitro.Telefono" class="control-label"> </label>
                    <input asp-for="EscuelaArbitro.Telefono" class="form-control" />
                    <span asp-validation-for="EscuelaArbitro.Telefono" class="text-danger"></span>
                    <label asp-for="EscuelaArbitro.Correo" class="control-label"> </label>
                    <input asp-for="EscuelaArbitro.Correo" class="form-control" /> 
                    <span asp-validation-for="EscuelaArbitro.Correo" class="text-danger"></span>             
                   </div>
                   <div class="form-group">                       
                       <input type="submit" value="Editar" class="btn btn-primary"/>                       
                   </div>
               </form>
           </div>
        </div>

        <div>
            <a asp-page="EAIndex">Ir al Inicio</a>
        </div> 
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}



