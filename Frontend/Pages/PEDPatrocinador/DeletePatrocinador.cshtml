@page
@model Frontend.Pages.DeletePatrocinadorModel
@{
    ViewData["Title"]="Delete";
}
<br>
<br>
<br>
<br>

<h1>Borrar Patrocinador</h1>
<br>
<h4>Patrocinador</h4>



<div class="form-horizontal">        
        <hr />        
        <div class="row">
           <div class="col-md-4">
               <form method="post">                   
                   <input type="hidden" asp-for="Patrocinador.id" />
                   <div class="form-group">
                    <label asp-for="Patrocinador.Identificacion" class="control-label">Identificación</label>
                    <input asp-for="Patrocinador.Identificacion" class="form-control" readonly/>
                    <label asp-for="Patrocinador.Nombre" class="control-label"> </label>
                    <input asp-for="Patrocinador.Nombre" class="form-control" readonly/>
                    <label asp-for="Patrocinador.tipoPersona" class="control-label">tipo de persona</label>
                    <input asp-for="Patrocinador.tipoPersona" class="form-control" readonly/>
                    <label asp-for="Patrocinador.Direccion" class="control-label">Dirección</label>
                    <input asp-for="Patrocinador.Direccion" class="form-control" readonly/>
                    <label asp-for="Patrocinador.Telefono" class="control-label">Teléfono</label>
                    <input asp-for="Patrocinador.Telefono" class="form-control" readonly/>                               
                   </div>
                   <h5 class="text-danger">@ViewData["Mensaje"] </h5>
                   <div class="form-group">                       
                       <input type="submit" value="Eliminar" class="btn btn-success"/>                       
                   </div>
               </form>
           </div>
        </div>
<br>
        <div>
            <a asp-page="PIndex">Volver</a>
        </div> 
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

