@page
@model Frontend.Pages.PIndexModel
@{
    ViewData["Titulo"]="PIndex"; // Sirven para el manejo de directivas. 
}
<br>
<br>
<br>
<br>
<h1>Listado de Patrocinadores</h1> 
<p>
    <a asp-page="CreatePatrocinador" class="btn btn-success">Crear Patrocinador</a> 
</p>
<br>
<table class="table table-success table-striped"> 
   <thead> 
       <tr>
           <!--<th>Id</th> -->
           <th>Identificación</th>
           <th>Nombre</th>
           <th>Tipo de persona</th>
           <th>Dirección</th>
           <th>Teléfono</th>
       </tr>
   </thead>
   @foreach (var patro in Model.Patrocinadores)
   {
    <tr> 
        <!-- <td>  @patro.id  </td> -->
        <td>  @patro.Identificacion </td>
        <td>  @patro.Nombre</td>
        <td>  @patro.tipoPersona </td>
        <td>  @patro.Direccion </td>
        <td>  @patro.Telefono </td>
        <td>
            <a asp-page="./EditPatrocinador" asp-route-id="@patro.id" class="btn btn-success"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
            </svg></a>
            <a asp-page="./DeletePatrocinador" asp-route-id="@patro.id" class="btn btn-danger"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
            </svg></a>
            <a asp-page="./DetailsPatrocinador" asp-route-id="@patro.id" class="btn btn-success"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
            </svg></a>
        </td>
    </tr>
   }
</table>

