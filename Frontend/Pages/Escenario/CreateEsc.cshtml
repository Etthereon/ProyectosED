@page
@model Frontend.Pages.CreateEscModel
@{
    ViewData["title"]="Create";
}
<h1>Crear Escenario</h1>
<h3 class="text-danger">@ViewData["Error"]</h3>

<div class="form-horizontal">
    <hr/>
    <div class="row">
        <div class=col-md-4>
            <form method="POST">
                <div> </div>
                <div class="form-group">
                    <label asp-for="Escenario.Nombre" class="control-label"></label>
                    <input asp-for="Escenario.Nombre" class="form-control" />
                    <label asp-for="Escenario.Direccion" class="control-label"></label>
                    <input asp-for="Escenario.Direccion" class="form-control" />
                    <label asp-for="Escenario.Telefono" class="control-label"></label>
                    <input asp-for="Escenario.Telefono" class="form-control" />
                    <label asp-for="Escenario.Horario" class="control-label"></label>
                    <input asp-for="Escenario.Horario" class="form-control" />
                    <label asp-for="Escenario.TorneoId" class="control-label"></label>
                    <select asp-for="Escenario.TorneoId" class="form-control" >
                        <option value="">**Seleccione un Torneo**</option>
                        @foreach (var tor in Model.Torneos)
                        {
                            <option value="@tor.id">@tor.Nombre</option>
                            
                        }
                    </select>
                </div>
                <div class="form-group">
                    <br>
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-page="EscIndex">Ir a inicio</a>
    </div>
</div>
@section Scripts
{
    @{
       await Html.RenderPartialAsync("_ValidationScriptsPartial"); 
    }
}

