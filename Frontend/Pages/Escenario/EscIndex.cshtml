@page
@model Frontend.Pages.EscIndexModel
@{
    ViewData ["Title"]="EscIndex";
}
<h1>Listado de Escenarios</h1>
<p>
    <a asp-page="CreateEsc">Crear Escenario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Telefono</th>
            <th>Horario</th>
            <th>TorneoId</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var esc in Model.Escenarios)
        {
            <tr>
                <td>@esc.id</td>
                <td>@esc.Nombre</td>
                <td>@esc.Direccion</td>
                <td>@esc.Telefono</td>
                <td>@esc.Horario</td>
                <td>@esc.TorneoId</td>
                <td>
                    <a asp-page="./EditEsc" asp-route-id="@esc.id">Editar</a>
                    <a asp-page="./DeleteEsc" asp-route-id="@esc.id">Eliminar</a>
                    <a asp-page="./DetailsEsc" asp-route-id="@esc.id">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>

