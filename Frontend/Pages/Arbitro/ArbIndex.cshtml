@page
@model Frontend.Pages.ArbIndexModel
@{
    ViewData ["Title"]="ArbIndex";
}
<h1>Listado de Arbitros</h1>
<p>
    <a asp-page="CreateArb" class="btn btn-success">Crear Arbitro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <!-- <th>Id</th> -->
            <th>Documento</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Genero</th>
            <th>Disciplina</th>
            <th>Torneo</th>
            <th>EscuelaArbitro</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var arb in Model.ArbitroView)
        {
            <tr>
                <!-- <td>@arb.id</td> -->
                <td>@arb.Documento</td>
                <td>@arb.Nombres</td>
                <td>@arb.Apellidos</td>
                <td>@arb.Genero</td>
                <td>@arb.Disciplina</td>
                <td>@arb.Torneo</td>
                <td>@arb.EscuelaArbitro</td>
                <td>
                    <a asp-page="./EditArb" asp-route-id="@arb.id" class="btn btn-primary">Editar</a>
                    <a asp-page="./DeleteArb" asp-route-id="@arb.id" class="btn btn-warning">Eliminar</a>
                    <a asp-page="./DetailsArb" asp-route-id="@arb.id" class="btn btn-info">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>

