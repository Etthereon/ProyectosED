@page
@model Frontend.Pages.EditEntModel
@{
     ViewData["Title"]="Edit";
}

<h1>Editar Entrenadores </h1>
<h4>Entrenador</h4>
<h3 class="text-danger">@ViewData["Mensaje"]</h3>

<div class="form-horizontal">
        
        <hr />
        
        <div class="row">
           <div class="col-md-4">
               <form method="post">
                  
                   <input type="hidden" asp-for="Entrenador.id" />
                   <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
                   <div class="form-group">
                    <label asp-for="Entrenador.Documento" class="control-label"></label>
                    <input asp-for="Entrenador.Documento" class="form-control" readonly/>
                    <label asp-for="Entrenador.Nombres" class="control-label"></label>
                    <input asp-for="Entrenador.Nombres" class="form-control" />
                    <span asp-validation-for="Entrenador.Nombres" class="text-danger"></span>
                    <label asp-for="Entrenador.Apellidos" class="control-label"></label>
                    <input asp-for="Entrenador.Apellidos" class="form-control" />
                    <span asp-validation-for="Entrenador.Apellidos" class="text-danger"></span>
                    <label asp-for="Entrenador.Genero" class="control-label"></label>
                    <input asp-for="Entrenador.Genero" class="form-control" />
                    <span asp-validation-for="Entrenador.Genero" class="text-danger"></span>
                    <label asp-for="Entrenador.DisciplinaDeportiva" class="control-label"></label>
                    <input asp-for="Entrenador.DisciplinaDeportiva" class="form-control" />
                    <span asp-validation-for="Entrenador.DisciplinaDeportiva" class="text-danger"></span>
                    <label asp-for="Entrenador.EquipoId" class="control-label">Equipo</label>
                    <select asp-for="Entrenador.EquipoId" class="form-control"> 
                        <option value="" >**Selecione un Equipo**</option>
                        @foreach (var equi in Model.Equipo)
                        {
                            <option value="@equi.id">@equi.Nombre</option>
                        }
                    </select>                    
                    <span asp-validation-for="Entrenador.EquipoId" class="text-danger"></span>
                   </div>
                   <div class="form-group">                       
                       <input type="submit" value="Editar" class="btn btn-primary"/>                       
                   </div>
               </form>
           </div>
        </div>

        <div>
            <a asp-page="EntIndex"> Ir a Inicio</a>
        </div> 
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

