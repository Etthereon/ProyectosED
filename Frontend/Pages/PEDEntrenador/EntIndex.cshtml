@page
@model Frontend.Pages.EntIndexModel
@{
    ViewData ["Title"]="EntIndex";
}
<h1>Listado de Entrenadores</h1>
<p>
    <a asp-page="CreateEnt" class="btn btn-success">Crear Entrenador</a>
</p>
<table class="table">
    <thead>
        <tr>
            <!-- <th>Id</th> -->
            <th>Documento</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Genero</th>
            <th>Equipo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ent in Model.EntrenadorView)
        {
            <tr>
                <!-- <td>@ent.id</td> -->
                <td>@ent.Documento</td>
                <td>@ent.Nombres</td>
                <td>@ent.Apellidos</td>
                <td>@ent.Genero</td>
                <td>@ent.DisciplinaDeportiva</td>
                <td>@ent.Equipo</td>
                <td>
                    <a asp-page="./EditEnt" asp-route-id="@ent.id" class="btn btn-primary">Editar</a>
                    <a asp-page="./DeleteEnt" asp-route-id="@ent.id" class="btn btn-warning">Eliminar</a>
                    <a asp-page="./DetailsEnt" asp-route-id="@ent.id" class="btn btn-info">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>

