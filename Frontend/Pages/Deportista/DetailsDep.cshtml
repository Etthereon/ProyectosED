<h1>Detalles de los Deportistas</h1>
<h4>Deportista</h4>
<br>

<div class="form-horizontal">
        
        <hr />
        
        <div class="row">
           <div class="col-md-4">
               <form method="post">
                   
                   <input type="hidden" asp-for="Deportista.id" />
                    <!-- <div class="form-group">
                       <label asp-for="Deportista.id" class="control-label"> </label>
                       <input asp-for="Deportista.id"  class="form-control" readonly/>                       
                   </div> -->

                   <div class="form-group">
                       <label asp-for="Deportista.Nombres" class="control-label"> </label>
                       <input asp-for="Deportista.Nombres"  class="form-control" readonly/>                       
                       <label asp-for="Deportista.Apellidos" class="control-label"> </label>
                       <input asp-for="Deportista.Apellidos"  class="form-control" readonly/>
                       <label asp-for="Deportista.Direccion" class="control-label"> </label>
                       <input asp-for="Deportista.Direccion"  class="form-control" readonly/>  
                   </div>

                   <div class="form-group">
                       <label asp-for="Deportista.Genero" class="control-label"> </label>
                       <input asp-for="Deportista.Genero"  class="form-control" readonly/>                       
                       <label asp-for="Deportista.Rh" class="control-label"> </label>
                       <input asp-for="Deportista.Rh"  class="form-control" readonly/>  
                       <label asp-for="Deportista.EPS" class="control-label"> </label>
                       <input asp-for="Deportista.EPS"  class="form-control" readonly/>
                       <label asp-for="Deportista.NumeroEmergencia" class="control-label">Numero de emergencia</label>
                       <input asp-for="Deportista.NumeroEmergencia"  class="form-control" readonly/>
                       <label asp-for="Deportista.FechaNac" class="control-label">Fecha de nacimiento</label>
                       <input asp-for="Deportista.FechaNac"  class="form-control" readonly/>
                   </div>

                   <div class="form-group">
                       <label asp-for="Deportista.Disciplina" class="control-label"> </label>
                       <input asp-for="Deportista.Disciplina"  class="form-control" readonly/>   
                       <label asp-for="Deportista.EquipoId" class="control-label">Equipo</label>
                       <select name="" id="" asp-for="Deportista.EquipoId" class="form-control"disabled> 
                        <option value="" >**Selecione un Equipo**</option>
                        @foreach (var patro in Model.Equipo)
                        {
                            <option value="@patro.id">@patro.Nombre</option>
                        }                               
                        </select>                      
                   </div>
                   
               </form>
           </div>
        </div>
        <br>
        <div>
            <a asp-page="DepIndex">Volver</a>
        </div> 
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

